{
    "build": {
        "beforeBuildCommand": "npx ng build",
        "beforeDevCommand": "npx ng serve",
        "devPath": "http://localhost:4200",
        "distDir": "../dist/petrinets"
    },
    "package": {
        "productName": "petrinets",
        "version": "0.4.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "dialog": {
                "all": true
            },
            "fs": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "org.spt.sim",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Petri Net Simulator",
                "width": 800
            }
        ]
    }
}
